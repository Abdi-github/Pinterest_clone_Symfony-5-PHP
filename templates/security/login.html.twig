{% extends 'pins/layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}



        <div class="row">
            <div class="col-md-6 mx-auto bg-light border  py-2">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control form-control-lg" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control form-control-lg" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                       >


                <div class="form-group d-flex justify-content-between mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me">
                            Remember me
                        </label>
                    </div>
                    <a href="#" class="text-muted">Forgot password?</a>

                </div>

                <div class="row">
                    <div class="col">


                        <button class="btn btn-success btn-block " type="submit">
                            Login
                        </button>
                    </div>
                    <div class="col">
                        <a href="{{ path('app_register') }}" class="btn  btn-outline-success btn-block"> No Account? Register</a>
                    </div>
                </div>
            </div>
    </form>
</div>
</div>
{% endblock %}
